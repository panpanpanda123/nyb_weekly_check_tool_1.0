# nginx配置 - 多项目管理
# 更新时间: 2026-02-04

server {
    
    # 支持域名和IP访问
    server_name blitzepanda.top 139.224.200.133 _;
    
    # 日志
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    
    # 门店评级系统（优先匹配）
    location /rating {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/rating {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # 评级系统静态文件
    location /static/ {
        alias /opt/review-result-viewer/viewer/static/;
        expires 7d;
        add_header Cache-Control "public, immutable";
    }
    
    # approvalquery 项目
    location /approvalquerynew {
        alias /var/www/approval-viewer/approvalquery;
        index index.html index.htm;
        try_files $uri $uri/ /approvalquerynew/index.html;
        
        # 数据文件缓存控制
        location ~ \.(json|txt|csv|xlsx)$ {
            add_header Cache-Control "no-store, no-cache, must-revalidate";
            add_header Access-Control-Allow-Origin "*";
        }
        
        # 静态资源缓存
        location ~ \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
            expires 7d;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # 根路径
    location = / {
        return 200 "可用项目:\n- /rating (门店评级)\n- /approvalquery (审批查询)\n";
        add_header Content-Type text/plain;
    }
    
    # 其他路径返回404
    location / {
        return 404;
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/blitzepanda.top/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/blitzepanda.top/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = blitzepanda.top) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 default_server;
    listen [::]:80 default_server;
    server_name blitzepanda.top 139.224.200.133 _;
    return 404; # managed by Certbot


}
